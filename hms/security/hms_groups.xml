<odoo>
    <data>
        <record id="hms_category" model="ir.module.category">
            <field name="name">HMS Groups</field>
        </record>
        <record id="hms_users_group" model="res.groups">
            <field name="name">Users</field>
            <field name="category_id" ref="hms_category" />
        </record>

        <record id="hms_managers_group" model="res.groups">
            <field name="name">Managers</field>
            <field name="category_id" ref="hms_category" />
            <field name="implied_ids" eval="[(4,ref('hms_users_group'))]" />
        </record>

        <record id="own_records_rule" model="ir.rule">
            <field name="name">User own his record rule</field>
            <field name="model_id" ref="model_hms_patient"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('hms_users_group'))]"/>
        </record>
        <record id="all_patients_rule" model="ir.rule">
            <field name="name">Manager View All Patients</field>
            <field name="model_id" ref="model_hms_patient"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('hms_managers_group'))]"/>
        </record>
    </data>
</odoo>